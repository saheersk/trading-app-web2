generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Klines {
  id           Int       @id @default(autoincrement())
  market       String
  bucket       DateTime
  close        Float
  high         Float
  low          Float
  open         Float
  quoteVolume  Float
  start        DateTime
  trades       Int
  volume       Float

  @@index([market, bucket])
}

model Trade {
  id         Int       @id @default(autoincrement())
  market     String
  timestamp  DateTime
  price      Float
  volume     Float

  @@index([market, timestamp])
}


